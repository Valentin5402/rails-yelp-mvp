<h1 class="my-3"><%= @restaurant.name %></h1>

<div class="mb-3">
  <p><i class="fa-solid fa-utensils"></i> <%= @restaurant.category %>'s cooking</p>
  <p><i class="fa-solid fa-map-location-dot"></i> <%= @restaurant.address %></p>
  <p><i class="fa-solid fa-phone"></i> <%= @restaurant.phone_number %></p>
</div>

<%# <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>

<hr>

<h3 class="mt-3">All reviews</h3>

<ul class="list-unstyled">
  <% @restaurant.reviews.each do |review| %>
  <li class="mb-3">
    <em><%= review.created_at %></em>
    <div class="border p-3 bg-light">
      <%= review.content %>
      <br>
      <% review.rating.times do %>
        <i class="fa-solid fa-star text-warning"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class="fa-regular fa-star text-warning"></i>
      <% end %>
      <%= review.rating %>/5
    </div>
  </li>
  <% end %>
</ul>

<hr>

<h3 class="mt-3">Add a review</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<br>
